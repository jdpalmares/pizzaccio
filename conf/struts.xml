<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

  <!-- ================================================================================ -->
  <!-- TRIGGER STRUTS TO USE SPRING FOR OBJECT DEPENDENCY -->
  <!-- ================================================================================ -->
  <constant name="struts.objectFactory" value="org.apache.struts2.spring.StrutsSpringObjectFactory" />
  <constant name="struts.objectFactory.spring.autoWire" value="auto" />
  <constant name="struts.custom.i18n.resources" value="global"/>
  <!-- ================================================================================ -->
  <!-- STRUTS GLOBAL CONFIGURATIONS -->
  <!-- ================================================================================ -->
  <constant name="struts.devMode" value="false" />

  <!-- ================================================================================ -->
  <!-- STRUTS CUSTOM PACKAGE CONFIGURATIONS -->
  <!-- ================================================================================ -->
  <package name="awsExample" extends="struts-default">
    <default-action-ref name="index" />
  </package>

</struts>